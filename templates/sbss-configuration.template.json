{
    "comments": {
        "lineComment": "--"
    },
    "brackets": [
        [
            "{",
            "}"
        ]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*if",
            "end": "^\\s*end"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "(^\\s*(if|elif|else).*$)",
        "decreaseIndentPattern": "(^\\s*(elif|else|end).*$)"
    },
    "wordPattern": "__WORD_PATTERN__"
}